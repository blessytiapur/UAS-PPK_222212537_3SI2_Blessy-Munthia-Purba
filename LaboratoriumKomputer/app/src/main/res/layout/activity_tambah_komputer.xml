<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TambahKomputerActivity">

    <android.widget.ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IP Address" />

            <EditText
                android:id="@+id/ruang_komputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ruang Komputer" />

            <EditText
                android:id="@+id/tanggal_beli"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Beli" />

            <EditText
                android:id="@+id/garansi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Garansi" />

            <EditText
                android:id="@+id/pemeliharaan_terakhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pemeliharaan Terakhir" />

            <EditText
                android:id="@+id/kondisi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kondisi" />

            <Button
                android:id="@+id/save_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simpan" />
        </LinearLayout>
    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>