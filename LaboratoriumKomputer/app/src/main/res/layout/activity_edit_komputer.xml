<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.EditKomputerActivity">

    <EditText
        android:id="@+id/edit_ip_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP Address"
        android:textSize="16sp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_ruang_komputer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ruang Komputer"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_ip_address" />

    <EditText
        android:id="@+id/edit_tanggal_beli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tanggal Beli"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_ruang_komputer" />

    <EditText
        android:id="@+id/edit_garansi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Garansi"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_tanggal_beli" />

    <EditText
        android:id="@+id/edit_pemeliharaan_terakhir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pemeliharaan Terakhir"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_garansi" />

    <EditText
        android:id="@+id/edit_kondisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Kondisi"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/edit_pemeliharaan_terakhir" />

    <Button
        android:id="@+id/edit_komputer_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Komputer"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_kondisi" />
</androidx.constraintlayout.widget.ConstraintLayout>